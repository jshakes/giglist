<a href="/" class="global-home-link"><span>&#8592;</span> Find another city</a>

<div class="city-playlist-page">
	<header class="city-playlist-header">
		<h2>{{ city.name }}</h2>
		<div class="social-wrapper">
			<ul>
				<li>
					<a class="twitter-icon icon"
					  href="https://twitter.com/intent/tweet?text={{city.name}}">
					</a>
				</li>
				<li><a
					class="fbook-icon icon"
					href=""
					onclick="popUp=window.open(
					       'http://www.facebook.com/sharer/sharer.php?display=popup&u=google.com&title={{city.name}}',
					       'popupwindow',
					       'scrollbars=yes,width=600,height=400');
					   popUp.focus();
					   return false">
					</a>
				</li>
				<li class="copy-city-url" data-clipboard-text="http://giglist.com/{{city.name}}"><span class="link-icon icon"></span></li>
			</ul>
		</div>
		<h3>Below is a list of tracks from artists with shows in {{ city.name }} over the next few&nbsp;weeks.</h3>
		<a href="{{playlistUrl}}" target="_blank" class="playlist-subscribe-link btn-rounded icon spotify-icon">Follow this Playlist</a>
	</div>

	<div class="city-playlist-wrapper">

		<div class="gig-info-list">
			<table>
				<thead class="gig-info-list-header">
					<tr>
						<th><h4>Artist</h4></th>
						<th><h4>Date</h4></th>
						<th><h4>Venue</h4></th>
						<th></th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					{{#each tracks}}
					<tr class="gig-info-list-item">
						<td class="gig-artist"><span>{{artist}}</span></td>
						<td class="gig-date"><span>{{songkick.date}}</span></td>
						<td class="gig-venue"><span>{{songkick.venue}}</span></td>
						<td class="gig-listen"><a href="{{spotify.url}}" class="btn-rounded icon spotify-icon">Listen</span></td>
						<td class="gig-link"><a href="{{songkick.url}}" class="btn-rounded icon songkick-icon">Info</a></td>
					</tr>
					{{/each}}
				</tbody>
			</table>
		</div>
	</div>
</div>
